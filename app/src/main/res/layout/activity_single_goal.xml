<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/single_goal_container"
    tools:context=".SingleGoalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/goal_text"
            android:gravity="top"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/goal_time"
            android:gravity="center|top"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:paddingTop="10sp"
            android:background="#F0F0F0"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_goal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16sp"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_trash_can" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_goal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16sp"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_save_text" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>