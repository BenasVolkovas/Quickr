<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="toast">
        <item name="stColorBackground">#14C878</item>
        <item name="stTextColor">#000000</item>
        <item name="stTextSize">20sp</item>
        <item name="stFont">@font/roboto</item>
        <item name="stIconStart">@drawable/ic_done</item>
        <item name="stStrokeColor">#000000</item>
        <item name="stStrokeWidth">2sp</item>
        <item name="stLength">SHORT</item>
        <item name="stRadius">50sp</item>
    </style>

</resources>
